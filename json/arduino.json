{
    "version": "1.0.0",
    "label": "Arduino: arduino_debug 生成活动文件",
    "compiler": "C:\\Program Files (x86)\\Arduino\\arduino_debug.exe",
    "compilerTag": "arduino_debug",
    "commands": [
        {
            "command_mode": "${compilerTag}",
            "verify_args": [
                "--board",
                "${arduino_board}",
                "--port",
                "${port}",
                "--verify",
                "${file}"
            ],
            "upload_args": [
                "--board",
                "${arduino_board}",
                "--port",
                "${port}",
                "--upload",
                "${file}"
            ]
        }
    ],
    "arduino_board": "arduino:avr:uno",
    "port": "COM3"
}